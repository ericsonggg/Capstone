<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/drawer_home">

    <fragment
        android:id="@+id/drawer_home"
        android:name="com.example.coolerthanyou.ui.home.HomeFragment"
        android:label="@string/drawer_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.coolerthanyou.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/drawer_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/drawer_control"
        android:name="com.example.coolerthanyou.ui.control.ControlFragment"
        android:label="@string/drawer_control"
        tools:layout="@layout/fragment_control" />

    <fragment
        android:id="@+id/drawer_gallery"
        android:name="com.example.coolerthanyou.ui.gallery.GalleryFragment"
        android:label="@string/drawer_data"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/drawer_slideshow"
        android:name="com.example.coolerthanyou.ui.slideshow.SlideshowFragment"
        android:label="@string/drawer_about"
        tools:layout="@layout/fragment_slideshow" />
</navigation>