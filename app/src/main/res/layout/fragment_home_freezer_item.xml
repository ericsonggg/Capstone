<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@drawable/background_simple_item"
    android:paddingTop="@dimen/padding_x_large"
    android:paddingBottom="@dimen/padding_x_large">

    <ImageView
        android:id="@+id/fragment_home_freezer_item_alert_icon"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_margin="@dimen/margin_large"
        android:contentDescription="@string/component_freezer_overview_alert_desc"
        android:tint="@color/urgent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_alert" />

    <TextView
        android:id="@+id/fragment_home_freezer_item_name"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/fragment_home_freezer_list_name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>