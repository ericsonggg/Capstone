<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/component_freezer_overview_height"
    android:layout_margin="@dimen/margin_small"
    android:background="@drawable/background_component_freezer_overview_item"
    android:padding="@dimen/padding_x_large">

    <TextView
        android:id="@+id/component_freezer_overview_none_text"
        style="@style/TextSectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/component_freezer_overview_no_favorite"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/component_freezer_overview_none_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/component_freezer_overview_none_heart"
        android:layout_width="@dimen/xx_small"
        android:layout_height="@dimen/xx_small"
        android:layout_marginTop="@dimen/margin_small"
        android:contentDescription="@string/component_freezer_overview_alert_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/component_freezer_overview_none_text"
        app:srcCompat="@drawable/ic_heart_outline" />

</androidx.constraintlayout.widget.ConstraintLayout>