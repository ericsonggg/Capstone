<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/ActorTextView</item>
        <item name="android:buttonStyle">@style/ActorButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- UI Element -->
    <style name="ActorTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/actor</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="ActorButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/actor</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="ActorEditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/actor</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="HorizontalBarrier">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="barrierDirection">bottom</item>
    </style>

    <!-- Text -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSectionHeader">
        <item name="android:textSize">@dimen/section_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/padding_x_large</item>
        <item name="android:paddingTop">@dimen/padding_med</item>
        <item name="android:paddingEnd">@dimen/padding_x_large</item>
        <item name="android:paddingBottom">@dimen/padding_med</item>
        <item name="android:background">@drawable/background_simple_item</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
